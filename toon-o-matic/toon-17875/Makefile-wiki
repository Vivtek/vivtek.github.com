WIKISRC = $(wildcard ./*.wiki)
WIKIPG = $(WIKISRC:.wiki=.html)

TOONSRC = $(wildcard ./toon-*.wiki)

all: toons.txt $(WIKIPG)

%.html: %.wiki
	perl /home/michael/vivtek/pages/index.pl $<
	perl /home/michael/vivtek/pages/weave.pl $< > $@

toons.txt: $(TOONSRC)
	perl toon_setup.pl
	modbot scan toon_o_matic
	perl cleanup.pl
	touch index.wiki
	touch toons.txt
